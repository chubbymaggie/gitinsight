{
  "version": [
    "package.json",
    "bower.json"
  ],
  "banner": "/**\n * <%= pkg.name %>\n * @version v<%= pkg.version %>\n * @link <%= pkg.repository.url %>\n * @copyright <%= pkg.copyright %>\n */\n",
  "html": {
    "src": [
      "<%= path.src %>base/html/**/*.html",
      "<%= path.src %>modules/**/html/*.html"
    ],
    "dist": "<%= path.dist %>html/"
  },
  "styles": {
    "base": {
      "src": [
        "<%= path.src %>base/sass/main.scss"
      ]
    },
    "modules": {
      "src": [
        "<%= path.src %>modules/**/sass/main.scss"
      ]
    },
    "dist": "<%= path.dist %>css/",
    "distfiles": {
      "main": [
        "<%= path.dist %>css/*.css"
      ]
    },
    "main": {
      "temp": {
        "path": "<%= path.temp %>sass/",
        "file": "<%= pkg.name %>-<%= pkg.version %>.min.scss"
      }
    },
    "imports": [
      "<%= path.bower %>/"
    ],
    "watchfiles": [
      "<%= path.bower %>**/*.scss",
      "<%= path.src %>base/sass/**/*.scss",
      "<%= path.src %>modules/**/sass/**/*.scss"
    ]
  },
  "injects": {
    "head": {
      "src": "<%= path.src %>base/template/globals/injects/*.html",
      "dist": "<%= path.temp %>injects/"
    }
  },
  "templates": {
    "src": [
      "<%= path.src %>base/template/**/*.jade",
      "<%= path.src %>modules/**/template/*.jade"
    ],
    "dist": "<%= path.templates %>",
    "flatten": {
      "src": [
        "<%= path.temp %>jade/*.jade",
        "!<%= path.temp %>jade/layout.jade",
        "!<%= path.temp %>jade/head.jade"
      ],
      "dist": "<%= path.temp %>jade/"
    }
  }
}
